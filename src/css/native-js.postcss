@import 'colors.postcss';

.native-js {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 10;
  display: flex;
  background: var(--shark);
  font-size: 14px;
  opacity: 0;
  align-items: center;

  &[data-state='visible'] {
    visibility: visible;
    opacity: 1;
  }
}

.native-flex {
  display: flex;
  flex-grow: 1;
  justify-content: center;
  padding: 10px 0;
  height: 100%;
  color: var(--white);
  text-decoration: none;
  font-weight: 400;
  line-height: 1.4;
  align-items: center;

  &:hover {
    text-decoration: none;
    color: var(--white);
  }

  @media all and (max-width: 768px) {
    flex-direction: column;
  }
}

.native-sponsor {
  top: -1px;
  margin-right: 5px;
  padding: 2px 4px;
  border: solid 1px var(--white);
  border-radius: 2px;
  text-transform: uppercase;
  letter-spacing: .5px;
  font-weight: 600;
  font-size: 10px;
}

.native-img {
  display: flex;
  margin: 0 10px;
  height: 100%;
  align-items: center;

  img {
    height: 27px;
  }
}

.native-desc {
  margin: 0 10px;
}

.native-cta {
  top: 1px;
  border-bottom: solid 2px var(--white);
  text-transform: uppercase;
  white-space: nowrap;
  letter-spacing: 1px;
  font-size: 12px;
}

.native-close {
  padding: 10px;
  color: var(--white);
  cursor: pointer;
}
